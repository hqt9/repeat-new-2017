<script type="text/javascript">
//<![CDATA[
    Validation.defaultOptions.immediate = true;
    var dataForm = new VarienForm('form-validate', true);
//]]>
    $j('#form-validate .form-list input').on('input',function(){
        console.log(dataForm.validator.getCheckForm());
        if(dataForm.validator.getCheckForm()){
            $j('.btn-submit').removeClass('disabled')
        }else{
            $j('.btn-submit').addClass('disabled')
        }
    })

    $j('.page-title .btn-submit').on('click',function(e) {
        if(dataForm.validator && dataForm.validator.validate()){
            dataForm.submit();
        }
    })
</script>
